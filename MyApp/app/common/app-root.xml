<Page xmlns="http://schemas.nativescript.org/tns.xsd">
    <!-- <Frame id="addTaskPage" defaultPage="pages/addTask-page" />
     -->
    <BottomNavigation selectedIndex="0">
    <TabStrip>
        <TabStripItem>
            <Label text="Today"></Label>
            <Image src="~/images/icons/clipboard.png"></Image>
        </TabStripItem>

        <TabStripItem>
            <Label text="Upcoming"></Label>
            <Image src="~/images/icons/alarm.png"></Image>
        </TabStripItem>

        <TabStripItem>
            <Label text="Settings"></Label>
            <Image src="~/images/icons/cog.png"></Image>
        </TabStripItem>
    </TabStrip>

    <!-- The number of TabContentItem components should corespond to the number of TabStripItem components -->
    <TabContentItem>
        <Frame id="mainPage" defaultPage="pages/today-page" />
    </TabContentItem>
    <TabContentItem>
        <Frame id="futurePage" defaultPage="pages/future-page" />
    </TabContentItem>
    <TabContentItem>
        <GridLayout>
            <Label text="Search Page" class="h2 text-center"></Label>
        </GridLayout>
    </TabContentItem>

</BottomNavigation>

</Page>