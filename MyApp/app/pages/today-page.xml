<Page xmlns="http://schemas.nativescript.org/tns.xsd"  navigatingTo="onNavigatingTo">
    <ActionBar title="Today" icon="" />
    <StackLayout class="p-20">
    <!-- <Label text="TODAY" class="title"/> -->
        <ListView items="{{ tasks }}">
            <ListView.itemTemplate>
                <GridLayout columns="auto, *" rows="auto, auto, auto, auto">
                    <Button tap="{{ $parents['ListView'].removeTask }}" col="0" row="0" rowSpan="3" text="âœ“" class="checkBox"/>
                    <Label col="1" row="0" text="{{ name }}" class="mainLabel" textWrap="true"/>
                    <Label col="1" row="1" text="{{ 'Class: ' + class }}" class="secLabel"/>
                    <Label col="1" row="2" text="{{ 'Time: ' + time }}" class="secLabel"/>
                     <Label col="1" row="3" text="{{ 'Type: ' + type }}" class="secLabel"/>
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>

        <Button tap="{{ goToAddTaskPage }}" col="0" row="0" rowSpan="3" text="Add" class="checkBox"/>
        
    </StackLayout>
</Page>
