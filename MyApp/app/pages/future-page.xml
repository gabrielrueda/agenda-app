<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="onNavigatingTo">
    <ActionBar title="Upcoming Tasks" icon="" />
    <StackLayout class="p-20">
        <Label text="Tommorow:" class="mainLabel"/>
        <Button text="sort" tap="{{ sortTasks }}" />
         <ListView width="100%" height="100%" items="{{ tasks }}">
            <ListView.itemTemplate>
                <GridLayout columns="auto, *" rows="auto, auto, auto, auto">
                    <Button tap="{{ $parents['ListView'].removeTask }}" col="0" row="0" rowSpan="3" text="âœ“" class="checkBox"/>
                    <Label col="1" row="0" text="{{ name }}" class="mainLabel" textWrap="true"/>
                    <Label col="1" row="1" text="{{ 'Class: ' + class }}" class="secLabel"/>
                    <Label col="1" row="2" text="{{ 'Date: ' + date }}" textWrap="true" class="secLabel"/>
                     <Label col="1" row="3" text="{{ 'Type: ' + type }}" class="secLabel"/>
                </GridLayout>
            </ListView.itemTemplate>
            </ListView>

        <Label text="This Week:" class="mainLabel"/>
        <Label text="This Month:" class="mainLabel"/>
    </StackLayout>
</Page>